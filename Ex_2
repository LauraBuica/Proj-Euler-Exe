        int n1 = 1;
        int n2 = 2;
        int n = 0;
        int sum = 2;

        while (n< 4_000_000) {
            n = n1 + n2;
            n1 = n2;
            n2 = n;

            if (n % 2 == 0) { 
                sum += n;
            }
        }
   
        System.out.println("sum: " + sum);
    }
}
